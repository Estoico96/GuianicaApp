<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">


    <FrameLayout
        android:id="@+id/container_activity_main"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/navigation_view_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/navigation_view_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_drawer_border_shadow"
        app:menu="@menu/menu_navigation_center_fab"
        app:itemIconTint="@color/state_list_item"
        app:itemTextColor="@color/state_list_item"/>

</RelativeLayout>