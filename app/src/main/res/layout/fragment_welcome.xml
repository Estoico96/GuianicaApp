<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.WelcomeFragment">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:src="@drawable/ic_logo_book"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name" />


    <TextView android:id="@+id/text_init_fragment_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="12"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="@font/nunito_sans_bold"
        android:textSize="17sp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/text_loading_fragment_welcome"
        android:layout_marginBottom="10dp"/>

    <TextView android:id="@+id/text_loading_fragment_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:textAlignment="center"
        android:maxLines="1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="@string/text_checking_connection_fragment_welcome"/>


</RelativeLayout>