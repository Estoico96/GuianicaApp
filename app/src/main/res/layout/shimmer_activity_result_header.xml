<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    style="@style/LayoutLateralMargin">

    <View
        android:id="@+id/category"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="@dimen/placeholder_lateral_margin"
        android:background="@drawable/background_shimmer_text"  />

    <View
        android:id="@+id/description_1"
        android:layout_width="270dp"
        android:layout_height="10dp"
        android:layout_marginBottom="7dp"
        android:layout_below="@+id/category"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_shimmer_text"  />

    <View
        android:id="@+id/description_2"
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:layout_marginBottom="7dp"
        android:layout_below="@+id/description_1"
        android:background="@drawable/background_shimmer_text"  />

    <View
        android:id="@+id/filter_1"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/description_2"
        android:layout_marginTop="10dp"
        android:background="@color/placeholderBg" />
    <View
        android:id="@+id/filter_2"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/filter_1"
        android:layout_below="@id/description_2"
        android:layout_marginTop="10dp"
        android:background="@color/placeholderBg" />

    <View
        android:id="@+id/filter_3"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/filter_2"
        android:layout_below="@id/description_2"
        android:layout_marginTop="10dp"
        android:background="@color/placeholderBg" />

    <View
        android:id="@+id/filter_4"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginBottom="7dp"
        android:layout_below="@id/description_2"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/filter_3"
        android:background="@color/placeholderBg" />

</RelativeLayout>