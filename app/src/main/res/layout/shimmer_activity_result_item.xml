<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_company_info_activity_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <View
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/placeholder_wh_logo"
            android:layout_height="@dimen/placeholder_wh_logo"
            android:background="@drawable/shimmer_circle_image"
            android:layout_marginEnd="7dp"/>

        <View
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/thumbnail"
            android:background="@drawable/background_shimmer_text" />

        <View android:id="@+id/rating"
            android:layout_width="100dp"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/name"
            android:layout_toEndOf="@id/thumbnail"
            android:background="@drawable/background_shimmer_text"  />

        <View android:id="@+id/specialty"
            android:layout_width="130dp"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/rating"
            android:layout_toEndOf="@id/thumbnail"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_shimmer_text"  />
        <View
            android:layout_width="130dp"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/specialty"
            android:layout_toEndOf="@id/thumbnail"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_shimmer_text"  />

    </RelativeLayout>

</android.support.v7.widget.CardView>