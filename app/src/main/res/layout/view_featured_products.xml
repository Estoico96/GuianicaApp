<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_view_featured_products"
    android:layout_width="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    android:layout_height="260dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_featured_products"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/lorem_product" />

        <TextView
            android:id="@+id/price_featured_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/image_view_featured_products"
            android:background="@drawable/background_tooltip"
            android:text="$12"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/name_view_featured_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_featured_products"
            android:layout_marginEnd="15dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Pizzini Italianini"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp" />

        <TextView android:id="@+id/description_view_featured_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_below="@+id/name_view_featured_products"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:ems="8"
            android:gravity="center"
            android:fontFamily="@font/nunito_sans"
            android:text="Queso Mozzarella, Espinaca, Aceitunas negras"
            android:textColor="@color/colorSecondaryText"
            android:textSize="14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>