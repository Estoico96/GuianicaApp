<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_view_offer"
    android:layout_width="204dp"
    android:layout_height="112dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp">


    <ImageView
        android:id="@+id/banner_view_offer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/banner_content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/lorem_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransparentBlack">


        <TextView
            android:id="@+id/tooltip_view_offer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@+id/company_logo_view_offer"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/tooltip_offer"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="+5"
            android:textColor="@color/colorPrimaryText"
            android:textSize="12sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/company_logo_view_offer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lorem_image"
            app:civ_border_width="0dp" />

        <TextView
            android:id="@+id/company_name_view_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_logo_view_offer"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>