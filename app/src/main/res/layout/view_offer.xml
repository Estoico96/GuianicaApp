<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_view_offer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="14dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <TextView android:id="@+id/company_name_offer_fragment_home"
        android:textSize="16sp"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="Atomic pizza nicaragua"/>


    <android.support.v7.widget.CardView
        android:id="@+id/container_banner_view_offer"
        android:layout_width="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_height="112dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/banner_view_offer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/banner_content_description" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tooltip_view_offer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/tooltip_offer"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>