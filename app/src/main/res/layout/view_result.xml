<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/company_logo_result_activity"
            style="@style/LayoutLateralMargin"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:elevation="@dimen/small_elevation"
            android:src="@drawable/shimmer_circle_image"
            app:civ_border_width="0dp" />

        <TextView android:id="@+id/company_name_result_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/company_logo_result_activity"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Atomic Pizza Nicaragua"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp" />

        <TextView android:id="@+id/company_specialty_result_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/company_logo_result_activity"
            android:fontFamily="@font/nunito_sans"
            android:layout_below="@+id/company_name_result_activity"
            android:text="Restaurante de comida rÃ¡pida"
            android:textColor="@color/colorSecondaryText"
            android:textSize="14sp" />

        <TextView android:id="@+id/state_company_result_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/company_logo_result_activity"
            android:textColor="#14E00C"
            android:fontFamily="@font/nunito_sans"
            android:layout_below="@+id/company_specialty_result_activity"
            android:text="Abierto ahora"
            android:textSize="14sp" />

        <ImageButton android:id="@+id/btn_more_result_activity"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_chevron_right_white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/colorAccent"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>