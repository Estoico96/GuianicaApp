<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="chipIconTint">@color/chipIconTint</item>
    </style>

    <!-- Application theme lateral padding. -->
    <style name="LayoutLateralPadding" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:paddingEnd">@dimen/padding_end</item>

    </style>

    <style name="LayoutLateralMargin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginTop">@dimen/padding_top</item>
        <item name="android:layout_marginStart">@dimen/padding_start</item>
        <item name="android:layout_marginEnd">@dimen/padding_end</item>

    </style>

    <!-- Application theme title header -->
    <style name="TitleHeader" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginTop">@dimen/title_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/title_margin_end</item>
        <item name="android:layout_marginStart" >@dimen/padding_start</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
    </style>

    <!-- Application theme title header -->
    <style name="SubtitleHeader" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginEnd">@dimen/subtitle_margin_end</item>
        <item name="android:textSize">@dimen/subtitle_font_size</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:paddingEnd">@dimen/padding_end</item>
    </style>
</resources>
